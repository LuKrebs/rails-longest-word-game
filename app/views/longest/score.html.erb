<div class="container-fluid">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 text-center">
        <p>Your attempt: <%= @attempt %></p>
        <p>The grid: <%= @grid %></p>
        <p><% @x = @start_time %></p>
        <p><%= ((@end_time - @x) / 60).floor %> minutes, <%= (@end_time - @x).round(1)  %> s</p>
        <p>Translation: <%= @result[:translation] %></p>
        <p>Score: <%= @result[:score].to_i %></p>
        <p>Result: <%= @result[:message] %></p>

        <%= link_to "+ New attempt", game_path %>
      </div>
    </div>
  </div>
</div>


